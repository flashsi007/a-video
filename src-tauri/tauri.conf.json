{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "a-video",
  "version": "0.1.0",
  "identifier": "com.a-video.app",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "a-video",
        "width": 782,
        "height": 517,
        "minWidth": 400,
        "minHeight": 300,
        "maxWidth": 1200,
        "maxHeight": 800,
        "resizable": true,
        "fullscreen": false,
        "alwaysOnTop": false,
        "visible": true,
        "decorations": true,
        "x": 0,
        "y": 480

      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
